<%= form_with url: user_sessions_path, method: :post do |f| %>
	<div class="field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %>
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :device_token %>
		<%= f.text_field :device_token %>
	</div>
	<div class="actions">
		<%= f.submit "Login" %>
	</div>
<% end %>